@{
    ViewBag.Title = "Home Page";
}

<div class="container">
    <input type="text" id="display"/>
    <div class="buttons">
        <div class="button"></div>
        <div class="button"></div>
        <div class="button">AC</div>
        <div class="button">*</div>
        <div class="button">7</div>
        <div class="button">8</div>
        <div class="button">9</div>
        <div class="button">/</div>
        <div class="button">4</div>
        <div class="button">5</div>
        <div class="button">6</div>
        <div class="button">-</div>
        <div class="button">1</div>
        <div class="button">2</div>
        <div class="button">3</div>
        <div class="button">+</div>
        <div class="button"></div>
        <div class="button">0</div>
        <div class="button">.</div>
        <div class="button">=</div>
    </div>
</div>

@section Scripts{
    <script>
        var firstNum = 0;
        var operator = "";
        var justDisplayed = false;

        /* handles the button pressing */
        $(document).ready(function(){
            $(".button").click(function(e){
                var operators = ["+", "-", "/", "*", "="];
                var value = e.currentTarget.innerHTML;
                var display = $("#display").val();

                /* clear values on ac */
                if (value == "AC") {
                    operator = ""
                    display = ""
                    $("#display").val(display);
                    firstNum = 0;
                    justDisplayed = false;
                }
                /* if an operator is pressed */
                else if ($.inArray(value, operators) != -1) {

                    /* if operator is pressed with only one number entered */
                    if (operator == "") {
                        firstNum = display;
                        operator = value;
                        $("#display").val("");
                    }

                    /* uses ajax call to use Calculate method from Home controller */
                    else {
                        if (value != "=")
                            operator = value;
                        $.ajax({
                            method: "POST",
                            url: "/Home/Calculate",
                            data: { firstNum: firstNum, secondNum: display, oper: operator },
                            success: function (result) {
                                $("#display").val(result);
                                firstNum = result;
                                justDisplayed = true;
                            },
                            error: function (error) {
                                alert("Problem caclculating");
                            }
                        });
                    }
                }
                /* if number is pressed */
                else {
                    /* clears previous result */
                    if (justDisplayed) {
                        display = value;
                        $("#display").val(display);
                        justDisplayed = false;
                    }

                    /* appends number pressed to display box */
                    else {
                        display = display + value;
                        $("#display").val(display);
                    }
                }
            });
        });
    </script>
}